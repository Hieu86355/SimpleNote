<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/button_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/note_color_default"
        android:src="@drawable/bg_note_color_default"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/note_color_1"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageView
        android:id="@+id/note_color_1"
        android:src="@drawable/bg_note_color_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/note_color_default"
        app:layout_constraintEnd_toStartOf="@id/note_color_2"/>

    <ImageView
        android:id="@+id/note_color_2"
        android:src="@drawable/bg_note_color_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/note_color_1"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/note_color_3"
        android:src="@drawable/bg_note_color_3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/note_color_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/note_color_4" />

    <ImageView
        android:id="@+id/note_color_4"
        android:src="@drawable/bg_note_color_4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/note_color_1"
        app:layout_constraintStart_toEndOf="@id/note_color_3"
        app:layout_constraintEnd_toStartOf="@id/note_color_5" />

    <ImageView
        android:id="@+id/note_color_5"
        android:src="@drawable/bg_note_color_5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/note_color_1"
        app:layout_constraintStart_toEndOf="@id/note_color_4"
        app:layout_constraintEnd_toStartOf="@id/note_color_6" />

    <ImageView
        android:id="@+id/note_color_6"
        android:src="@drawable/bg_note_color_6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/note_color_1"
        app:layout_constraintStart_toEndOf="@id/note_color_5"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/done_color_default"
        android:visibility="gone"
        android:src="@drawable/ic_done"
        app:tint="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/note_color_default"
        app:layout_constraintEnd_toEndOf="@id/note_color_default"
        app:layout_constraintTop_toTopOf="@id/note_color_default"
        app:layout_constraintBottom_toBottomOf="@id/note_color_default" />

    <ImageView
        android:id="@+id/done_color_1"
        android:visibility="gone"
        android:src="@drawable/ic_done"
        app:tint="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/note_color_1"
        app:layout_constraintEnd_toEndOf="@id/note_color_1"
        app:layout_constraintTop_toTopOf="@id/note_color_1"
        app:layout_constraintBottom_toBottomOf="@id/note_color_1" />

    <ImageView
        android:id="@+id/done_color_2"
        android:visibility="gone"
        android:src="@drawable/ic_done"
        app:tint="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/note_color_2"
        app:layout_constraintEnd_toEndOf="@id/note_color_2"
        app:layout_constraintTop_toTopOf="@id/note_color_2"
        app:layout_constraintBottom_toBottomOf="@id/note_color_2" />

    <ImageView
        android:id="@+id/done_color_3"
        android:visibility="gone"
        android:src="@drawable/ic_done"
        app:tint="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/note_color_3"
        app:layout_constraintEnd_toEndOf="@id/note_color_3"
        app:layout_constraintTop_toTopOf="@id/note_color_3"
        app:layout_constraintBottom_toBottomOf="@id/note_color_3" />

    <ImageView
        android:id="@+id/done_color_4"
        android:visibility="gone"
        android:src="@drawable/ic_done"
        app:tint="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/note_color_4"
        app:layout_constraintEnd_toEndOf="@id/note_color_4"
        app:layout_constraintTop_toTopOf="@id/note_color_4"
        app:layout_constraintBottom_toBottomOf="@id/note_color_4" />

    <ImageView
        android:id="@+id/done_color_5"
        android:visibility="gone"
        android:src="@drawable/ic_done"
        app:tint="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/note_color_5"
        app:layout_constraintEnd_toEndOf="@id/note_color_5"
        app:layout_constraintTop_toTopOf="@id/note_color_5"
        app:layout_constraintBottom_toBottomOf="@id/note_color_5" />

    <ImageView
        android:id="@+id/done_color_6"
        android:visibility="gone"
        android:src="@drawable/ic_done"
        app:tint="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/note_color_6"
        app:layout_constraintEnd_toEndOf="@id/note_color_6"
        app:layout_constraintTop_toTopOf="@id/note_color_6"
        app:layout_constraintBottom_toBottomOf="@id/note_color_6" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/note_color_3"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_color_cancel"
        android:text="CANCEL"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="16dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_color_okay"
        app:layout_constraintTop_toBottomOf="@id/line"/>

    <Button
        android:id="@+id/btn_color_okay"
        android:text="OK"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="16dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/btn_color_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"/>

</androidx.constraintlayout.widget.ConstraintLayout>